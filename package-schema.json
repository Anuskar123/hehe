{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NPM package.json",
  "description": "NPM package.json file schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the package.",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "description": "The version of the package.",
      "pattern": "^(\\d+\\.)?(\\d+\\.)?(\\*|\\d+)$"
    },
    "description": {
      "type": "string",
      "description": "A brief description of the package."
    },
    "main": {
      "type": "string",
      "description": "The entry point of the package."
    },
    "scripts": {
      "type": "object",
      "description": "Scripts to run various commands.",
      "additionalProperties": {
        "type": "string"
      }
    },
    "dependencies": {
      "type": "object",
      "description": "Dependencies of the package.",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "required": ["name", "version", "main"]
}
